.page {
  min-height: 100vh;
  background-color: #fff9f2;
  padding: 24rpx 32rpx 40rpx;
  box-sizing: border-box;
}
.header {
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}
.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #4a3c31;
}
.subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #968c83;
}
.content {
  font-size: 30rpx;
  color: #4a3c31;
  line-height: 1.6;
}
.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 40rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
}
.btn-next {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #ffa573, #ff8f55);
  font-size: 32rpx;
}
